{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.eslint.json"
  },
  "extends": ["next/core-web-vitals", "prettier", "airbnb-base", "airbnb-typescript/base", "plugin:@typescript-eslint/recommended-requiring-type-checking"],
  "ignorePatterns": ["next.config.js"],
  "rules": {
    "dot-notation": "off",
    "@typescript-eslint/dot-notation": "off",
    "object-curly-newline": "off",
    "arrow-body-style": "off"
  }
}
